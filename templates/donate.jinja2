{% extends 'base.jinja2' %}

{% block subtitle %}Make a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<span class="error">{{ error }}<br>{% endif %}
    <p><label for="name-input">Name:</label><input id="name-input" type="text" name="donor"></p>
    <p><label for="number">Donation amount: $</label><input type="number" id="number" name="value"></p>
    <p><input type="submit" value="Donate"></p>
</form>
{% endblock content %}
